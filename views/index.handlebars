    <div class="col-12">
      <form id="add-burger">
        <div class="form-group">
          {{!-- <label for="add-burger">Add Your Favorite Burger</label> --}}
          <input type="text" class="form-control text-center" id="burger-name" placeholder="Put your tasty burger here! This is where you should type in your burger.">
